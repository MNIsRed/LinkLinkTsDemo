/**index.wxss**/
.gradientBackground{
  position: absolute;
  top: 0;
  width: 100%;
  height: 500rpx;
  background: linear-gradient(#CFFFF1,#CFFFF100);
}

#tryAgain{
  width: 206rpx;
  height: 206rpx;
  z-index: 1009;
  position: absolute;
  top: 50%;
  right: 50%;
  transform: translate(-30rpx, -30rpx);
}

#next{
  width: 206rpx;
  height: 206rpx;
  z-index: 1009;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(30rpx, -30rpx);
}

#bottomTip{
  z-index: 1009;
  position: absolute;
  top: 50%;
  left: 50%;
  width: max-content;
  display: flex;
  flex-direction: row;
  transform: translate(-50%, 220rpx);
  align-items: center;
}

#linkItem{
  margin-bottom: 200rpx;
}

.center-message-bg {
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-left: 48rpx;
  margin-right: 48rpx;
  z-index: 1006;
}

.center-notify-bg {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
  width: 144rpx;
  height: 62rpx;
  background-color: #DCFCDE;
  align-items: center;
  border-radius: 31rpx;
}

.center-notify-text {
  font-size: 24rpx;
  font-weight: 350;
  color: #0A7810;
  position: absolute;
  left: 68rpx;
}

.center-right-items-bg {
  display: flex;
  flex-direction: row;
}

.center-audio-btn {
  width: 62rpx;
  height: 62rpx;
  background-color: #E4F9F4;
  border-radius: 31rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.center-time-bg {
  width: 89rpx;
  height: 62rpx;
  background-color: #E4F9F4;
  border-radius: 31rpx;
  margin-left: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 0 28rpx;
}

.center-time-bg .van-count-down {
  color: #0A0D0F !important;
  font-weight: 400;
  font-size: 28rpx !important;
}

.dialogRoot{
  position: relative;
  width: 100%;
  height: 100%;
}

.dialogBackground{
  position: absolute;
  z-index: 1003;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.dialogImage{
  position: absolute;
  z-index: 1004;
}

span{
  color: #F97800;
}

.nextButton{
  background-color: #37C23E;
  border-radius: 68rpx;
  width: 450rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}